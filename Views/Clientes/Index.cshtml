@model IEnumerable<atv1.Models.Cliente>



@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Cadastro de Clientes</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" asp-controller="Cliente" class="btn btn-info">Novo Cliente</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Sexo</th>
                <th>Idade</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nome</td>
                    <td>@item.Sexo</td>
                    <td>@item.Idade</td>
                    <td>@item.DataNascimento.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Cliente" asp-route-id="@item.Codigo" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-controller="Cliente" asp-route-id="@item.Codigo" class="btn btn-sm btn-secondary">Detalhes</a>
                        <a asp-action="Delete" asp-controller="Cliente" asp-route-id="@item.Codigo" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
