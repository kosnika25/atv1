@model IEnumerable<atv1.Models.Cidade>





@{
    ViewData["Title"] = "Cidades";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Cadastro de Cidades</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" asp-controller="Cidade" class="btn btn-info">Nova Cidade</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.NomeCidade</td>
                    <td>@item.Estado?.Nome</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Cidade" asp-route-id="@item.Codigo" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-controller="Cidade" asp-route-id="@item.Codigo" class="btn btn-sm btn-secondary">Detalhes</a>
                        <a asp-action="Delete" asp-controller="Cidade" asp-route-id="@item.Codigo" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

